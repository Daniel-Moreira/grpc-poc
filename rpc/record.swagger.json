{
  "swagger": "2.0",
  "info": {
    "title": "grpc-poc",
    "version": "1.0",
    "contact": {
      "name": "Daniel Augusto De Melo Moreira",
      "url": "https://github.com/Daniel-Moreira/grpc-poc",
      "email": "dammkami@gmail.com"
    }
  },
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/api/records.backup": {
      "post": {
        "operationId": "BackupRecord",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/rpcResponse"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/rpcRecord"
            }
          }
        ],
        "tags": [
          "RecordService"
        ]
      }
    },
    "/api/records/{id}": {
      "get": {
        "operationId": "GetRecord",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/rpcResponse"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int32"
          }
        ],
        "tags": [
          "RecordService"
        ]
      }
    }
  },
  "definitions": {
    "RecordRecordStatus": {
      "type": "string",
      "enum": [
        "inprogress",
        "completed",
        "absent",
        "failed"
      ],
      "default": "inprogress"
    },
    "rpcError": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "rpcRecord": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int32"
        },
        "duration": {
          "type": "string"
        },
        "status": {
          "$ref": "#/definitions/RecordRecordStatus"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "rpcResponse": {
      "type": "object",
      "properties": {
        "ok": {
          "type": "boolean",
          "format": "boolean"
        },
        "record": {
          "$ref": "#/definitions/rpcRecord"
        },
        "error": {
          "$ref": "#/definitions/rpcError"
        }
      }
    }
  }
}
